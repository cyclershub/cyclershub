---
import RegisterContent from "~/components/RegisterContent.svelte";
import Layout from "~/layouts/Layout.astro";
import MinimalLayout from "~/layouts/MinimalLayout.astro";

import { isLoggedIn } from "~/lib/SharedVerification";

const loggedIn = await isLoggedIn(Astro);

if (loggedIn) {
	return Astro.redirect("/user")
}

---

<MinimalLayout title="Signup | CyclersHub">
	<RegisterContent client:load></RegisterContent>
</MinimalLayout>